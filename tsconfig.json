{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es2022",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": ".", // для обсолютного импорта
      "paths": {
        "*": ["./src/*"]
      },
     "esModuleInterop": true,
   "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
  }